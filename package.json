{
  "name": "@boardmeister/module-skeleton",
  "version": "0.0.1",
  "description": "Example module, to be reused when creating new common modules",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "typescript": "./node_modules/.bin/dts-bundle-generator --no-check --export-referenced-types false --project tsconfig.json -o dist/index.d.ts src/index.tsx",
    "link": "npm link @boardmeister/minstrel @boardmeister/herald @boardmeister/marshal",
    "tailwind": "tailwindcss -i ./src/input.css -o ./src/output.css --minify",
    "build": "npm run tailwind && node esbuild.config.mjs && npm run typescript"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Board-Meister/module-skeleton.git"
  },
  "keywords": [
    "module",
    "frontend",
    "tool"
  ],
  "author": "",
  "license": "GPL-2.0-only",
  "bugs": {
    "url": "https://github.com/Board-Meister/module-skeleton/issues"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-hook-form": "^7.51.5",
    "react-jss": "^10.10.0"
  },
  "homepage": "https://github.com/Board-Meister/module-skeleton#readme",
  "devDependencies": {
    "glob": "^10.4.1",
    "@eslint/js": "^9.9.0",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "postcss": "^8.4.38",
    "globals": "^15.9.0",
    "react-router-dom": "^6.22.3",
    "tailwindcss": "^3.4.3",
    "terser": "^5.31.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "esbuild": "0.21.4",
    "esbuild-plugin-inline-import": "^1.0.4",
    "esbuild-plugin-output-reset": "^2.0.1",
    "dts-bundle-generator": "^9.5.1"
  }
}
